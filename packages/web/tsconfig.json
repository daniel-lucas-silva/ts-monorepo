{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@ts-monorepo/leaf": [
        "../leaf/src"
      ],
      "@ts-monorepo/leaf/*": [
        "../leaf/src/*"
      ],
      "@ts-monorepo/core": [
        "../core/src"
      ],
      "@ts-monorepo/core/*": [
        "../core/src/*"
      ]
    },
    "incremental": true
  },
  "references": [
    {
      "path": "../leaf"
    },
    {
      "path": "../core"
    }
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ]
}
