//prettier-ignore
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "ES6",
    "target": "ES5",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@ts-monorepo/leaf": ["../leaf/src"],
      "@ts-monorepo/leaf/*": ["../leaf/src/*"],
      "@ts-monorepo/core": ["../core/src"],
      "@ts-monorepo/core/*": ["../core/src/*"],
      "@ts-monorepo/api": ["../api/src"],
      "@ts-monorepo/api/*": ["../api/src/*"],
    }
  },
  "ts-node": {}
}
